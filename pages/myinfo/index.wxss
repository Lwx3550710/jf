.addressPage{
    background: rgb(247,247,247);
    width: 100%;
    height: 100%;
    position: absolute;
}
.info-bd{
    background: #fff;
    width: 100%;
    height: 180px;
    display: flex;
}
.info-bd dl{
    flex: 1;
    text-align: center;
    padding: 35px 0;
}
.info-bd dt image{
    width: 150rpx;
    height: 150rpx;
    display: block;
    margin: 0 auto;
}
.info-bd dd{
    line-height: 40px;
}
.addressPage .ad-form{
    width: 750rpx;
    background: #fff;
    margin: 10px 0;
    overflow: hidden;
}
.addressPage .group{
    width: 720rpx;
    padding: 0 15px;
    border-bottom: 1px #E6E6E6 solid;
    display: flex;
    flex: 1;
    overflow: hidden;
}
.addressPage .group .form-label{
    width: 80px;
    font-size: 15px;
    line-height: 50px;
    height: 50px;
}
.addressPage .group .form-input label{
    margin: 12px 15px 0 0;
    font-size: 15px;
    display: inline-block;
}
.addressPage .group .form-input label radio{
    transform:scale(0.5);
}
.addressPage .group .form-input .i-text{
    line-height: 50px;
    height: 50px;
    color: #999999;
}
.addressPage .btn{
    width:640rpx;
    line-height:80rpx;
    color: #fff;
    font-size:36rpx;
    margin: 100rpx auto 0;
    border-radius:10rpx;
    text-align: center;
    background:#C79F62;
}