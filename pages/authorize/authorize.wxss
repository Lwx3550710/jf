@import "/common/sg.wxss";

.logo {
  height: 350rpx;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.logo text {
  font-size: 36rpx;
  line-height: 40rpx;
  color: #333;
}

.info {
  margin: 0 40rpx;
  border-top: 2rpx solid #dcdddd;
  padding: 50rpx 0;
}

.info .p {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
}

.info .p2 {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #999;
  margin-top: 40rpx;
  padding-left: 50rpx;
  position: relative;
}

.info .p2:after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #999;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -10rpx;
}

.getPower {
  background: #1aac19;
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  margin: 20rpx 40rpx;
}
