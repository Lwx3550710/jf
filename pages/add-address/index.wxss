.addressPage{
    background: rgb(247,247,247);
    width: 100%;
    height: 100%;
    position: absolute;
}
.addressPage .ad-form{
    width: 750rpx;
    background: #fff;
    margin: 50rpx 0;
    overflow: hidden;
}
.addressPage .group{
    width: 720rpx;
    padding: 0 30rpx;
    border-bottom: 2rpx #E6E6E6 solid;
    display: flex;
    flex: 1;
    overflow: hidden;
}
.addressPage .group .form-label{
    width: 160rpx;
    font-size: 30rpx;
    line-height: 100rpx;
    height: 100rpx;
}
.addressPage .group .form-input label{
    margin: 24rpx 30rpx 0 0;
    font-size: 30rpx;
    display: inline-block;
}
.addressPage .group .form-input label radio{
    transform:scale(0.6);
}
.addressPage .group .form-input .i-text{
    line-height: 100rpx;
    height: 100rpx;
    color: #999999;
    font-size:30rpx;
}
.addressPage .btn{
    width:640rpx;
    line-height:80rpx;
    color: #fff;
    font-size:36rpx;
    margin: 0 auto;
    border-radius:10rpx;
    text-align: center;
    background:#C79F62;
}
.addressPage .deletebtn{
    width:640rpx;
    line-height:80rpx;
    color: #C79F62;
    font-size:36rpx;
    margin: 0 auto;
    border-radius:10rpx;
    text-align: center;
    border: 1rpx solid #C79F62;
    margin-top: 45rpx;
    background:rgb(247,247,247);
}
.shouhuodozhi{
  padding-right: 30rpx;
}