<view class="addressPage">
  <form bindsubmit="formSubmit">
    <view class="ad-form">
        <view class="group">
            <view class="form-label">联系人</view>
            <view class="form-input">
                <input name="name" type="text" class="i-text" value="{{name}}" placeholder="输入姓名"></input>
            </view>
        </view>
        <view class="group">
            <view class="form-label"></view>
            <view class="form-input">
                <radio-group name="sex">
                  <label for="sex1"><radio value="0" checked="{{sex == 0}}"></radio>男士</label>
                  <label for="sex2"><radio value="1" checked="{{sex == 1}}"></radio>女士</label>
                </radio-group>
            </view>
        </view>
        <view class="group">
            <view class="form-label">手机号</view>
            <view class="form-input"><input name="mobile" type="number" class="i-text" value="{{mobile}}" placeholder="输入手机号"></input></view>
        </view>
        <view class="group">
            <view class="form-label">收货地址</view>
            <view class="form-input"><input name="shdz" type="text" class="i-text" value="{{shdz}}" placeholder="输入收货地址"></input></view>
        </view>
        <view class="group">
            <view class="form-label">门牌号</view>
            <view class="form-input"><input name="mph" type="number" class="i-text" value="{{mph}}" placeholder="输入门牌号"></input></view>
        </view>
    </view>
    <button form-type="submit" class="btn">保存</button >
  </form>
</view>
